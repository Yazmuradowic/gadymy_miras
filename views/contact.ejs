<%- include('partials/header'); -%>
    <!-- CONTACT SECTION -->
    <section id="contact" class="contact-section">
        <div class="container">
            <h2 class="section-title">Habarlaşmak</h2>
            <div class="contact-wrapper">
                <div class="contact-form-wrapper">
                    <form id="contactForm" class="contact-form" method="post" action="/contact">
                        <div class="form-group">
                            <label for="name">Adyňyz</label>
                            <input type="text" id="name" name="name" required>
                            <span class="error-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                            <span class="error-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="message">Hat</label>
                            <textarea id="message" name="message" rows="5" required></textarea>
                            <span class="error-message"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Iber</button>
                    </form>
                </div>
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h4>Telefon</h4>
                            <p>+993 12 34 56 78</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h4>Email</h4>
                            <p>info@gadymymiras.tm</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h4>Salgy</h4>
                            <p>Aşgabat, Türkmenistan</p>
                        </div>
                    </div>
                    <div class="social-media">
                        <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-telegram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%- include('partials/footer'); -%>